doctype html
html
  head
    // meta informations
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible' content='ie=edge')

    // title of the webpage
    title #{notice.title} &mdash; Notice

    // favicon
    link(rel='icon' href='https://dummyimage.com/70x70/fff/000333&text=ACS')

    // stylesheets
    link(rel='stylesheet' href='/css/all.min.css')
    link(rel='stylesheet' href='/css/bootstrap.css')
    link(rel='stylesheet' href='/css/style.css')

  body
    include ../partials/header

    section.notice
      .container
        .row
          .col-8
            .notice__container
  

              .notice__full
                .notice__title
                  h3 #{notice.title}
                .notice__created
                  p  #{ moment(notice.created).format('LLLL') }
                .notice__desc
                  p
                  | !{notice.desc}

          .col-4
            aside.sidebar
            .sidebar__single
              .sidebar__single--title
                | Upcoming events
              .sidebar__single--content

                for single in events
                  p
                    a(href=`/event/${single._id}`) #{single.name}
                      span
                        br
                        | #{moment(single.startTime).format('LL')}
 


            .sidebar__single
              .sidebar__single--title Past events
              .sidebar__single--content
                 for single in eventsEnded
                  p
                    a(href=`/event/${single._id}`) #{single.name}
                      span 
                        br
                        | #{moment(single.startTime).format('LL')}

    include ../partials/footer